<Window x:Class="Projekt.Skarner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="League of Legends Helper" Height="600" Width="500">
    <ScrollViewer>
        <Grid>
            <Button Content="Back to Champions" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="MoveToChampions"/>

            <Image Width="100" Margin="-300,-600,0,0">
                <Image.Source>
                    <BitmapImage UriSource="/images/champions/Skarner.png"/>
                </Image.Source>
            </Image>
            <TextBlock HorizontalAlignment="Left" Margin="170,135,0,0" TextWrapping="Wrap" Text="Skarner" VerticalAlignment="Top" Height="50" Width="250" FontSize="40" TextAlignment="Center" FontFamily="Helvetica" Foreground="FloralWhite" />
            <TextBlock HorizontalAlignment="Left" Margin="170,200,0,0" TextWrapping="Wrap" Text="Q > E > W" VerticalAlignment="Top" Height="50" Width="250" FontSize="20" TextAlignment="Center" FontFamily="Helvetica" Foreground="FloralWhite" />
            <StackPanel>
                <Image Source="images/items/Warrior.png" Width="50" Margin="-200,300,0,0" />
                <TextBlock TextAlignment="Center" Width="75" Height="60" Margin="-200,0,0,0" Foreground="FloralWhite"><Run Text="Warrior"/></TextBlock>
            </StackPanel>
            <StackPanel>
                <Image Source="images/items/Sorce.png" Width="50" Margin="-100,300,0,0" />
                <TextBlock TextAlignment="Center" Width="75" Height="60" Margin="-100,0,0,0" Foreground="FloralWhite"><Run Text="Sorcerer's&#10;Shoes"/></TextBlock>
            </StackPanel>
            <StackPanel>
                <Image Source="images/items/Trinity.png" Width="50" Margin="0,300,0,0" />
                <TextBlock TextAlignment="Center" Width="75" Height="60" Margin="0,0,0,0" Foreground="FloralWhite"><Run Text="Trinity&#10;Force"/></TextBlock>
            </StackPanel>
            <StackPanel>
                <Image Source="images/items/DMP.png" Width="50" Margin="100,300,0,0" />
                <TextBlock TextAlignment="Center" Width="75" Height="60" Margin="100,0,0,0" Foreground="FloralWhite"><Run Text="Dead&#10;Man's&#10;Plate"/></TextBlock>
            </StackPanel>
            <StackPanel>
                <Image Source="images/items/Sterak.png" Width="50" Margin="200,300,0,0" />
                <TextBlock TextAlignment="Center" Width="75" Height="60" Margin="200,0,0,0" Foreground="FloralWhite"><Run Text="Sterak's&#10;Gage"/></TextBlock>
            </StackPanel>
            <TextBlock Margin="150,400,150,50" TextAlignment="Center" Foreground="FloralWhite">
	Last item depends on enemy team.
            </TextBlock>
            <Image Source="images/runes/Skarner.PNG" Width="400" Height="300" Margin="0,300,0,0" />
            <TextBlock Margin="170,800,170,50" TextAlignment="Center">           
    <Hyperlink NavigateUri="https://www.probuilds.net/champions/details/Skarner" Foreground="White" RequestNavigate="Hyperlink_RequestNavigate">
        Probuilds.net @ Skarner
    </Hyperlink>
            </TextBlock>
        </Grid>
    </ScrollViewer>
</Window>