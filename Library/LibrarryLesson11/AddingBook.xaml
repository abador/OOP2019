<Window x:Class="LibrarryLesson11.AddingBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarryLesson11"
        mc:Ignorable="d"
        Title="Adding Book" Height="312.944" Width="501.904">
    <Window.Resources>
        <local:Catalogue x:Key="C"></local:Catalogue>
    </Window.Resources>
    <Grid Margin="0,0,2,4">
        <TextBox Name="authorfirstname_tb" HorizontalAlignment="Left" Height="23" Margin="178,28,-187,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" RenderTransformOrigin="-0.51,-0.928" />
        <Label Content="Author name:&#xD;&#xA;" HorizontalAlignment="Left" Margin="81,28,-62,0" VerticalAlignment="Top" Width="91" Height="23"/>
        <TextBox Name="asurname_tb" HorizontalAlignment="Left" Height="26" Margin="178,56,-187,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="119" />
        <Label  Content="Title:" HorizontalAlignment="Left" Margin="131,92,-62,0" VerticalAlignment="Top" Height="24" Width="41"/>
        <TextBox Name="btitle_tb" HorizontalAlignment="Left" Height="23" Margin="178,92,-187,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119"/>
        <Label  Content="id:" HorizontalAlignment="Left" Margin="146,121,-62,0" VerticalAlignment="Top" Width="26" Height="25"/>
        <Label Content="Publisher:" HorizontalAlignment="Left" Margin="103,153,-62,0" VerticalAlignment="Top" Width="69" Height="27"/>
        <Label Content="Year of publish:" HorizontalAlignment="Left" Margin="74,180,-62,0" VerticalAlignment="Top" Width="98" Height="29"/>
        <Label Content="Number of pages:" HorizontalAlignment="Left" Margin="50,214,-62,0" VerticalAlignment="Top" Width="122" Height="25"/>
        <TextBox Name="id_name_tb"  HorizontalAlignment="Left" Height="26" Margin="178,120,-187,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119"/>
        <Label Content="Author surname:" HorizontalAlignment="Left" Margin="61,56,-62,0" VerticalAlignment="Top" Width="111"/>
        <TextBox Name="bpublisher_tb" HorizontalAlignment="Left" Height="27" Margin="178,151,-187,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119"/>
        <TextBox Name="yop_tb" HorizontalAlignment="Left" Height="26" Margin="178,183,-187,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119"/>
        <TextBox Name="nop_tb" HorizontalAlignment="Left" Height="23" Margin="178,218,-187,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119"/>
        <Button Content="Add book" HorizontalAlignment="Left" Margin="332,183,-323,0" VerticalAlignment="Top" Width="101" RenderTransformOrigin="0.222,1.393" Height="26" Click="Button_Click" />
        <Button Content="Exit" HorizontalAlignment="Left" Margin="332,218,-323,0" VerticalAlignment="Top" Width="101" Height="23" RenderTransformOrigin="0.5,0.5" Click="exit_button_click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.018"/>
                    <RotateTransform Angle="0.08"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
